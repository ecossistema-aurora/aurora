<div class="d-flex justify-content-between align-items-end">
    <p class="fw-bold">{{ totalOpportunities}} {{ 'view.opportunity.quantity.total' | trans }}</p>
    {% include '_components/order-select.html.twig' %}
</div>

{% for opportunity in opportunities %}
    <div class="card opportunity-card mt-3 p-3">
        <div class="card-body row g-3 align-items-start">

            <div class="col-auto d-flex align-items-start">
                <img src="{{ opportunity.image ? asset(opportunity.image) : asset('img/default-image.png') }}"
                     alt="{{ opportunity.name }}" class="rounded-circle opportunity-img">
            </div>

            <div class="col d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="opportunity-card__title fw-bold m-0">{{ opportunity.name ?? 'available_name' | trans }}</h5>

                    <div class="d-flex align-items-center gap-2">
                        <i class="material-icons text-primary">check_circle</i>
                        <span>{{ 'opened_registrations' | trans }}</span>
                        <button class="btn btn-outline-primary btn-sm copy-id" data-id="{{ opportunity.id }}">
                            {{ 'copy_id' | trans }}
                        </button>
                    </div>
                </div>

                <p class="opportunity-card__type">
                    {% if opportunity.extraFields.type is defined and opportunity.extraFields.type is not null %}
                        {{ opportunity.extraFields.type }}
                    {% else %}
                        {{ 'available_type' | trans }}
                    {% endif %}
                </p>

                {% if opportunity.space or opportunity.initiative or opportunity.event %}
                <p class="d-flex align-items-center gap-2 mb-1">
                    <i class="material-icons text-primary">link</i>
                    <span class="fw-bold text-dark">
                        {{ 'linked_with' | trans }}:
                        {% if opportunity.space %}
                            <a class="text-primary text-decoration-none" href="{{ path('web_space_getOne', {id: opportunity.space.id}) }}">{{ opportunity.space.name }}</a>
                        {% elseif opportunity.initiative %}
                            <a class="text-primary text-decoration-none" href="{{ path('web_initiative_show', {id: opportunity.initiative.id}) }}">{{ opportunity.initiative.name }}</a>
                        {% elseif opportunity.event %}
                            <a class="text-primary text-decoration-none" href="{{ path('web_event_show', {id: opportunity.event.id}) }}">{{ opportunity.event.name }}</a>
                        {% endif %}
                    </span>
                </p>
                {% endif %}

                {% if opportunity.extraFields.period is defined and opportunity.extraFields.period is not null %}
                <p class="d-flex align-items-center gap-2 mb-1">
                    <i class="material-icons text-primary">event</i>
                    <span class="text-dark">
                        {{ 'from' | trans }} {{ opportunity.extraFields.period.startDate|date('d/m/Y') }}
                        {{ 'to' | trans }} {{ opportunity.extraFields.period.endDate|date('d/m/Y') }}
                    </span>
                </p>
                {% endif %}

                <p class="d-flex align-items-center gap-2 mb-1">
                    <i class="material-icons text-primary">description</i>
                    <span class="text-dark">
                        {{ opportunity.description|default('available_description' | trans)|slice(0, 150) }}{% if (opportunity.description|default(''))|length > 150 %}...{% endif %}
                    </span>
                </p>

                <p class="d-flex align-items-center gap-2 mb-1">
                    <i class="material-icons text-primary">work</i>
                    <strong class="text-dark">{{ 'areas_of_interest' | trans }} ({{ opportunity.extraFields.areasOfActivity is defined ? opportunity.extraFields.areasOfActivity|length : 0 }}):</strong>
                    <span class="fw-bold opportunity-card__areas">
                        {% if opportunity.extraFields.areasOfActivity is defined and opportunity.extraFields.areasOfActivity is not empty %}
                            {{ opportunity.extraFields.areasOfActivity|join(', ') }}
                        {% else %}
                            {{ 'no_areas' | trans }}
                        {% endif %}
                    </span>
                </p>

                <div class="entity-seals mt-2 d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-wrap gap-2">
                        {% if opportunity.extraFields.tags is defined and opportunity.extraFields.tags is not empty %}
                            <strong class="text-dark">{{ 'tags' | trans }}:</strong>
                            {% for tag in opportunity.extraFields.tags %}
                                <span class="seal-entity px-3 py-1">{{ tag }}</span>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div class="d-flex gap-2">
                        {% if app.user %}
                            <button
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalActionConfirm"
                                    onclick="confirmAction(this)"
                                    data-href="{{ path('admin_opportunity_subscribe', {id: opportunity.id}) }}"
                                    class="btn btn-outline-primary btn-sm"
                            >
                                {{ 'subscribe' | trans }}
                            </button>
                        {% else %}
                            <a href="{{ path('web_auth_login') }}" class="btn btn-outline-primary btn-sm">
                                {{ 'subscribe' | trans }}
                            </a>
                        {% endif %}

                        <a href="{{ path('web_opportunity_details', {id: opportunity.id}) }}" class="btn btn-primary btn-sm">
                            {{ 'view.opportunity.access' | trans }}
                        </a>
                    </div>
                </div>

            </div>

        </div>
    </div>
{% else %}
    <p class="text-center text-muted mt-4">{{ 'view.opportunity.no_opportunities_found' | trans }}</p>
{% endfor %}

{% if opportunities|length > 0 %}
    <div class="container align-items-center mt-5 mb-5">
        <div class="centered-icon-text card-view-more">
            <i class="material-icons">add_circle_outline</i>
            <button class="btn fw-bold">{{ 'see_more' | trans }}</button>
        </div>
    </div>
{% endif %}
