<footer class="footer">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a href="#"><img src="{{ asset(env.aurora.logo.vertical.path) }}" width="150px" alt="{{ "logo"|trans }}" class="img-fluid"></a>
            </div>
            {% if env.aurora.homepage.sections.footer.social_network == 'true' %}
                <div class="social-icons">
                    <a href="#"><img src="{{ asset('img/icone-facebook.png') }}" alt="Facebook" class="me-4"></a>
                    <a href="#"><img src="{{ asset('img/icone-x.png') }}" alt="X" class="me-4"></a>
                    <a href="#"><img src="{{ asset('img/icone-youtube.png') }}" alt="YouTube"></a>
                </div>
            {% endif %}
        </div>
    </div>
</footer>
