<div class="item-card-home bg-white p-4 rounded shadow-sm mt-4">
    <div class="row">
        <div class="col-md-3 offset-md-9 position-relative">
            <div class="d-flex align-items-center justify-content-end">
                <i class="material-icons text-success">{{ status_icon }}</i>
                <span>{{ status_text }}</span>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-1">
        <div class="col-md-3">
            <img src="{{ image_url }}" class="rounded-circle img-fluid profile-image">
        </div>
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-start">
                <h4 class="fw-bold">{{ title }}</h4>
            </div>
        </div>
    </div>

    <p class="text-danger fw-bold mt-4">Inscrições de {{ date }}</p>
    <p class="text-muted">{{ description }}</p>

    <h6 class="fw-bold"> {{ 'activity_area'|trans }} ({{ interest_areas_count }}):</h6>
    <p> <span class="fw-bold text-info">{{ interest_areas }}</span> </p>

    <h6 class="fw-bold"> {{ 'tags'|trans }} ({{ tags_count }}):</h6>
    <p> <span class="fw-bold text-info">{{ tags }}</span> </p>

    <div class="row mt-3">
        <div class="col-md position-relative">
            <a href="{{ link_url }}" class="btn btn-primary d-flex align-items-center justify-content-center">
                <span class="fw-bold">{{ 'check'|trans }}</span>
                <i class="material-icons ms-3">arrow_forward</i>
            </a>
        </div>
    </div>
</div>
