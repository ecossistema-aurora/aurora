<div class="item-card-home bg-white p-4 rounded shadow-sm mt-4">
    <div class="row">
        <div class="col-md-3 offset-md-9 position-relative">
            <div class="d-flex align-items-center justify-content-end">
                <i class="material-icons text-success">{{ status_icon|default('check_circle') }}</i>
                <span>{{ status_text|default('opened_registrations'|trans) }}</span>
            </div>
        </div>
    </div>
    <div class="row align-items-start mt-1">
        <div class="col-md-3">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}" alt="{{ image_alt|default('opportunity.image'|trans) }}" class="rounded-circle img-fluid profile-image">
        </div>
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-start">
                <h4 class="fw-bold">
                    {{ title|default('opportunities'|trans) }}
                </h4>
            </div>
        </div>
    </div>
    {#    <p class="text-danger fw-bold mt-4">{{ registration_period|default('opened_registrations'|trans) }}</p>#}

    {% if (phases_count != 0) %}
        <p class="text-danger fw-bold mt-4">Inscrições de {{ phases[0].startDate.format('d/m/Y') }} até {{ phases[0].endDate.format('d/m/Y') }}</p>
        <p class="text-muted">{{ description|default('Descrição do evento ou oportunidade aqui.') }}</p>
    {% endif %}

    <h6 class="fw-bold mt-4">{{ 'social_media'|trans }} ({{ social_media_count|default(0) }}):</h6>
    <p><span class="text-danger fw-bold">{{ social_medias|default('Nenhuma rede social especificada') }}</span></p>
    <h6 class="fw-bold">{{ 'phases'|trans }} ({{ phases_count|default(0) }}):</h6>
    {% if (phases_count != 0) %}
        <p class="text-danger fw-bold">{{ opportunity.phases|map(p => p.name)|join(', ') }}</p>
    {% else %}
        <p class="text-danger fw-bold">Nenhuma fase especificada</p>
    {% endif %}

    <div class="row mt-3">
        <div class="col-md position-relative">
            <a href="{{ path('web_opportunity_details', { id: opportunity.id }) }}" class="btn btn-primary d-flex align-items-center justify-content-center">
                <span class="fw-bold">{{ 'check'|trans }}</span>
                <i class="material-icons ms-3">arrow_forward</i>
            </a>
        </div>
    </div>
</div>