<div class="item-card-home bg-white p-4 rounded shadow-sm h-100">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div class="flex-shrink-0">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}"
                 alt="{{ image_alt|default('agent.image'|trans) }}"
                 class="rounded-circle card-profile-img"
            >
        </div>
        <div class="d-inline-flex align-items-center gap-1 text-muted text-end ms-3 mt-1">
            <i class="material-icons text-success" style="font-size: 1.2rem;">{{ status_icon|default('check_circle') }}</i>
            <span class="fw-semibold" style="font-size: 0.9rem;">{{ 'view.agent.individual_agents'|trans }}</span>
        </div>
    </div>

    <h4 class="fw-bold mb-2">{{ name|default('agents'|trans) }}</h4>
    <p class="fw-bold mb-1">{{ agent.shortBio|default('agent_short_bio'|trans) }}</p>
    <p class="text-muted mb-4">{{ agent.longBio|default('agent.long_bio'|trans) }}</p>

    <h6 class="fw-bold">{{ 'view.agent.areas_of_expertise'|trans }} ({{ areas_of_expertise_count|default(0) }}):</h6>
    <p class="text-danger fw-bold mb-3">{{ areas_of_expertise|default('none_area_specified'|trans) }}</p>

    <h6 class="fw-bold">{{ 'seals'|trans }} ({{ seals_count|default(0) }}):</h6>
    <div class="d-flex mb-4">
        <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 35px; height: 35px; font-size: 0.9rem; font-weight: bold;">
            {{ seals|default('+0') }}
        </div>
    </div>

    <div class="d-grid mt-2">
        <a href="{{ path('web_agent_getOne', { id: agent.id }) }}" class="btn btn-primary d-flex align-items-center justify-content-center gap-2 py-2">
            <span class="fw-bold">{{ 'check'|trans }}</span>
            <i class="material-icons">arrow_forward</i>
        </a>
    </div>

</div>