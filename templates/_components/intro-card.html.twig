<div class="card intro-card col-md-12 mt-4 overflow-hidden p-0">
    <div class="row g-0 h-100">
        <div class="col-md-7 side-image d-flex align-items-center p-3 p-md-4"
             style="background-image: linear-gradient(#00000066, #00000066), url('{{ urlImg }}');
                     background-size: cover;
                     background-position: center;
                     min-height: 160px;">
            <span class="rounded-circle d-inline-flex align-items-center justify-content-center me-3 flex-shrink-0"
                  style="background-color: {{ entityColor }}; width: 60px; height: 60px;">
                <i class="material-icons text-white" style="font-size: 2rem;">home</i>
            </span>
            <span class="text-white fw-bold fs-4">{{ entity }}</span>
        </div>
        <div class="col-md-5 side-text">
            <div class="card-body p-3 p-md-4 d-flex flex-column h-100">
                <p class="card-text flex-grow-1">{{ textEntity }}</p>

                <div class="text-end mt-3">
                    <a href="{{ path }}" class="text-decoration-none fw-bold" style="color: {{ entityColor }}">
                        <span class="d-inline-flex align-items-center gap-1">
                            {{ 'check'|trans }}
                            <i class="material-icons">keyboard_arrow_right</i>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
