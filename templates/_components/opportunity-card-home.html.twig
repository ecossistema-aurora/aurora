<div class="bg-white p-4 rounded shadow-sm mt-4">
    <div class="row">
        <div class="col-md">
            {% if (phases_count != 0) %}
            <span class="d-flex justify-content-end align-items-center gap-0 fw-bold fs-6 text-dark">
                <i class="material-icons text-success">{{ status_icon|default('check_circle') }}</i>
                {{ status_text|default('Inscrições abertas') }}
            </span>
            {% endif %}
        </div>
    </div>
    <div class="row align-items-start mt-3">
        <div class="col-md-1">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}" alt="{{ image_alt|default('Imagem') }}" class="rounded-circle img-fluid">
        </div>
        <div class="col-md-11">
            <div class="d-flex justify-content-between align-items-start">
                <h4 class="fw-bold">
                    {{ title|default('Título do Evento') }}
                </h4>
            </div>
        </div>
    </div>
    <div class="row">
        {% if (phases_count != 0) %}
        <div class="col">
            <p class="text-danger fw-bold mt-4">Inscrições de {{ phases[0].startDate.format('d/m/Y') }} até {{ phases[0].endDate.format('d/m/Y') }}</p>
            <p class="text-muted">{{ description|default('Descrição do evento ou oportunidade aqui.') }}</p>
        </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-12 col-sm-6">
            <h6 class="fw-bold mt-4">{{ 'social_media'|trans }} ({{ social_media_count|default(0) }}):</h6>
            <p><span class="text-danger fw-bold">{{ social_medias|default('Nenhuma rede social especificada') }}</span></p>
            <h6 class="fw-bold">{{ 'phases'|trans }} ({{ phases_count|default(0) }}):</h6>
            {% if (phases_count != 0) %}
            <p class="text-danger fw-bold">{{ opportunity.phases|map(p => p.name)|join(', ') }}</p>
            {% else %}
            <p class="text-danger fw-bold">Nenhuma fase especificada</p>
            {% endif %}
{#            <h6 class="fw-bold">{{ 'SELOS'|trans }} ({{ badges_count|default(0) }}):</h6>#}
{#            <div class="d-flex">#}
{#                <div class="badge bg-secondary text-white rounded-pill px-2 py-1">{{ badges|default('+0') }}</div>#}
{#            </div>#}
        </div>
        <div class="col-12 col-sm-6 d-flex flex-column justify-content-end">
            <a data-cy="show-opportunity-btn" href="{{ link_url|default('#') }}" class="btn btn-primary mt-3 d-flex justify-content-center align-items-center">
                <span class="fw-bold">{{ 'check'|trans }}</span>
                <i class="material-icons ms-3">arrow_forward</i>
            </a>
        </div>
    </div>
</div>
