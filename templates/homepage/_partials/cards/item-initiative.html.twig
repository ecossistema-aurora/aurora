<div class="item-card-home bg-white p-4 rounded shadow-sm mt-4">
    <div class="row align-items-center">
        <div class="col-md-3">
            <img src="{{ image_url }}" class="rounded-circle img-fluid profile-image">
        </div>
        <div class="col-md-9 position-relative">
            <div class="d-flex align-items-center justify-content-end">
                <i class="material-icons text-success">{{ status_icon }}</i>
                <span>{{ status_text }}</span>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-1">
        <div class="d-flex justify-content-between align-items-start">
            <h4 class="fw-bold">{{ title }}</h4>
        </div>
    </div>

    <p> <span class="text-uppercase fw-bold mt-3">{{ 'type'|trans }}:</span> <span class="text-green">{{ type }}</span>  </p>

    <div class="row align-items-start mt-1">
        <div class="col-md-12">
            <div class="d-flex align-items-center">
                <i class="material-icons text-success">today</i>
                <span>{{ date }}</span>
            </div>
        </div>
    </div>

    <p> {{ description }} </p>

    <div class="row mt-3">
        <div class="col-md position-relative">
            <a href="{{ path('web_initiative_show', { id: initiative.id }) }}" class="btn btn-primary d-flex align-items-center justify-content-center">
                <span class="fw-bold">{{ 'check'|trans }}</span>
                <i class="material-icons ms-3">arrow_forward</i>
            </a>
        </div>
    </div>
</div>