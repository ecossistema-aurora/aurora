<div class="entity-imgs">
    <div id="banner-preview-box" class="banner" {% if organization.coverImage %}style="background-image: url('{{ asset(organization.coverImage) }}')"{% endif %}>
        <input type="file" name="coverImage" class="banner-input js-cropper-input" id="banner-input" accept="image/*"
               data-modal-id="modalBannerCrop"
               data-preview="#banner-preview-box"
               data-aspect-ratio="{{ 1920/356 }}"
        />

        <label for="banner-input" class="banner-label">
            <span class="iconify entity-edit-icon me-2" data-icon="tabler:camera-plus"></span>
            {{ 'add_cover_image' | trans }}
        </label>
    </div>

    <div class="profile-pic">
        <label for="profile-input" class="profile-label">
            <img id="profile-img" src="{{ organization.image }}" alt="{{ 'photo' | trans }}" class="profile-label">
            <input id="profile-input" type="file" accept="image/*" name="profileImage" />
        </label>
    </div>
</div>

<div class="entity-introduction-data">
    <label for="name">
        <span class="required">{{ 'view.organization.name' | trans }}</span>
        <span class="iconify entity-edit-icon me-2" data-icon="ri:question-fill"></span>
    </label>
    <input type="text"
           class="form-control"
           id="name" name="name"
           value="{{ organization.name }}"
           placeholder="{{ 'type_here' | trans }}"
           required
    >

    <div class="my-2">
        {% include '_components/tags-selector.html.twig' with {
            inputName: 'activityAreas',
            inputLabel: 'areas_of_expertise'|trans,
            items: activityAreaItems|map(area => { 'label': area.name, 'value': area.id }),
            tags: organization.activityAreas ? organization.activityAreas|map(area => { 'label': area.name, 'value': area.id }) : [],
            required: false,
            questionFill: true,
        } %}
    </div>

    <div class="entity-input-tags">
        <label>
            Tags
            <span class="iconify entity-edit-icon me-2" data-icon="ri:question-fill"></span>
        </label>
        <span class="d-flex align-items-center gap-3 fw-bold">
            {{ 'add_new' | trans|lower }}
            <span class="iconify fs-5" data-icon="material-symbols:add"></span>
        </span>
    </div>

    <label for="short-description" class="required">{{ 'short_description' | trans }}</label>
    <textarea
        class="form-control"
        id="short-description" name="short_description"
        placeholder="{{ 'short_description' | trans }}"
        required
        maxlength="400"
    >
        {{- organization.description | default('') -}}
    </textarea>

    <label for="long-description">{{ 'long_description' | trans }}</label>
    <textarea
        class="form-control"
        id="long-description" name="long_description"
        placeholder="{{ 'long_description' | trans }}"
        required
    >
        {{- organization.longDescription | default('') -}}
    </textarea>


    <div class="d-flex flex-wrap gap-1 gap-md-3">
        <div class="flex-grow-1">
            <label for="site">{{ 'site' | trans }} (URL):</label>
            <input
                name="site"
                type="text"
                id="site"
                class="form-control"
                placeholder="https://www.site.com"
                value="{{ organization.extraFields.site | default('') }}">
        </div>
        <div class="flex-grow-1">
            <label for="link-description">{{ 'link_description' | trans }}:</label>
            <input
                type="text"
                id="link-description"
                name="link_description"
                class="form-control"
                placeholder="Digite"
                value="{{ organization.extraFields.link_description | default('') }}"
            >
        </div>
    </div>
    <div class="d-flex flex-wrap gap-1 gap-md-3 mt-1 mt-md-3">
        <div class="flex-grow-1">
            <label for="email">{{ 'public_email' | trans }}:</label>
            <input
                type="email"
                id="email"
                class="form-control"
                name="email"
                placeholder="email@email.com"
                value="{{ organization.extraFields.email | default('') }}">
        </div>
        <div class="flex-grow-1">
            <label for="phone">{{ 'public_phone' | trans }} :</label>
            <input
                type="text"
                id="phone"
                name="phone_number"
                class="form-control"
                placeholder="(00) 00000-0000"
                value="{{ organization.extraFields.phone | default('') }}">
        </div>
    </div>
</div>

{% include '_components/banner-cropper.html.twig' with {'modalId': 'modalBannerCrop'} %}

{% block extra_javascripts %}
    <script src="{{ asset('js/_components/tags-selector.js') }}"></script>
    <script src="{{ asset('js/banner-cropper.js') }}"></script>
{% endblock %}
