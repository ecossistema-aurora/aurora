<div class="activity-area-form-container">
    <h2 class="form-title">{{ 'activity_area_register'| trans }}</h2>

    {% if errors is defined and errors|length > 0 %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form method="POST" action="">
        <input type="hidden" name="token" value="{{ csrf_token(form_id) }}">
        <div class="mb-3">
            <label for="name" class="form-label">{{ 'name' | trans }}</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="{{ 'name' | trans }}" required>
        </div>

        <div class="btn-form-group">
            <button class="btn btn-primary" type="submit">
                {{ 'save' | trans }}
            </button>
        </div>
    </form>
</div>
