<div class="item-card-home bg-white p-4 rounded shadow-sm h-100">
    <div class="d-flex justify-content-between align-items-start mb-3">
        <div class="flex-shrink-0">
            <img src="{{ image_url|default(asset('img/default-image.png')) }}"
                 alt="{{ image_alt|default('event.image'|trans) }}"
                 class="rounded-circle card-profile-img">
        </div>
        <div class="d-inline-flex align-items-center gap-1 text-muted text-end ms-3 mt-1">
            <i class="material-icons text-success fs-5">{{ status_icon|default('check_circle') }}</i>
            <span class="fw-semibold small">{{ 'events'|trans }}</span>
        </div>
    </div>

    <h4 class="fw-bold mb-3">{{ title|default('event.title'|trans) }}</h4>

    <div class="d-flex align-items-center gap-2 mb-2">
        <i class="material-icons text-success fs-5">today</i>
        <span>{{ date }}</span>
    </div>

    <div class="d-flex align-items-center gap-2 mb-4">
        <i class="material-icons text-success fs-5">location_on</i>
        <span>{{ location }}</span>
    </div>

    <h6 class="fw-bold">{{ 'areas_of_interest'|trans }}:</h6>
    <p class="text-info fw-bold mb-3">{{ interest_areas|default('none_area_specified'|trans) }}</p>
    <h6 class="fw-bold">{{ 'tags'|trans }}:</h6>
    <p class="text-info fw-bold mb-3">{{ tags|default('none_area_specified'|trans) }}</p>
    <p class="mb-4">{{ description }}</p>

    <div class="d-grid mt-2">
        <a href="{{ path('web_event_show', { id: event.id }) }}" class="btn btn-primary d-flex align-items-center justify-content-center gap-2 py-2">
            <span class="fw-bold">{{ 'check'|trans }}</span>
            <i class="material-icons">arrow_forward</i>
        </a>
    </div>
</div>