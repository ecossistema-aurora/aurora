{% extends "_layouts/blank.html.twig" %}

{% block title %} {{ 'control_panel'|trans }} - {{ 'area_of_activity'|trans }} {% endblock %}

{% block content %}
    {% include '_components/modal-confirm-remove.html.twig' %}

    <section class="d-flex">
        {% include "_components/side-bar.html.twig" %}

        <div class="management-content w-100 p-4">
            <div class="row">
                <div class="col-12">
                    <div class="card card-body shadow">
                        <div class="d-flex justify-content-between">
                            <h2>{{ 'area_of_activity'|trans }}</h2>
                            <div>
                                <a href="{{ path('admin_activity_area_add') }}" class="btn btn-primary">
                                    {{ 'create' | trans }}
                                </a>
                            </div>
                        </div>

                        <hr>

                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                            <tr>
                                <th>{{ 'name'|trans }}</th>
                                <th>{{ 'actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in activity_areas %}
                                <tr>
                                    <td>{{ item.name }}</td>
                                    <td>
                                        <a href="{{ path('admin_activity_area_edit', {id: item.id}) }}" class="btn btn-outline-warning btn-sm">
                                            {{ 'edit'|trans }}
                                        </a>
                                        <button data-bs-toggle="modal" data-bs-target="#modalRemoveConfirm"
                                                onclick="confirmRemove(this)" data-href="{{ path('admin_activity_area_remove', {id: item.id}) }}"
                                                class="btn btn-outline-danger btn-sm">
                                            {{ 'delete'|trans }}
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">{{ 'no_records_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block extra_javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/modal-confirm-remove.js') }}"></script>
{% endblock %}
