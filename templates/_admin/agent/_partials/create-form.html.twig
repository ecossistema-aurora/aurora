<section class="main-form-content mb-3">
    <form action="" method="POST" enctype="multipart/form-data" id="agent-create-form">
        <input type="hidden" name="token" value="{{ csrf_token(form_id) }}">
        <section class="presentation-info">
            <div>
                <h2 class="fw-bold fs-4">{{ "view.agent_create.agent_information" | trans }}</h2>
                {% set asterisk = '<span class="text-danger">*</span>' %}
                <p>{{ 'view.agent_create.mandatory_fields_message'|trans({'asterisco': asterisk})|raw }}</p>
            </div>

            <div class="d-flex flex-column flex-md-row">
                <div class="presentation-info__agent">
                    <label for="cover-image" class="agent-banner">
                        <span class="iconify align-self-center mb-2 fs-3" data-icon="ion:image-outline"></span>
                        <span>{{ "view.agent_create.add_cover_image" | trans}}</span>
                        <input class="d-none" type="file" name="cover_image" id="cover-image">
                    </label>

                    <div class="d-flex flex-column flex-md-row gap-md-5 mt-4 mb-4">
                        <label for="profile-image" class="profile-picture-label align-self-center">
                            <span class="agent-profile-img">
                                <span class="iconify fs-4 text-white" data-icon="ion:image-outline"></span>
                            </span>
                            <span class="d-flex flex-column small align-self-center">
                               <span class="align-self-center">{{ "add" | trans }}</span> {{ "view.agent_create.add_profile_image"|trans }}
                            </span>
                            <input class="d-none" type="file" name="profile_image" id="profile-image">
                        </label>

                        <div class="agent-input-form align-self-end w-100">
                            <label for="agent-name">{{ "view.agent_create.agent_name" | trans}} <span class="text-danger">*</span> </label>
                            <input data-cy="agent-name" class="required" type="text" id="agent-name" name="name"
                                   data-min-length="2"
                                   data-max-length="100"
                                   data-error-length="{{ "view.agent_create.error_length" | trans }}">
                            <span class="text-danger fw-bold d-none">
                                {{ "required_field" | trans }}
                            </span>
                        </div>
                    </div>
                    <div class="agent-expertise">
                        <label for="areas" class="form-label fw-bold">{{ "view.agent.areas_of_expertise" | trans}} <span class="text-danger">*</span></label>
                        <button type="button" class="d-flex align-items-center mb-3">
                            {{ "view.agent_create.add_new" | trans}} <span class="iconify" data-icon="majesticons:plus-line"></span>
                        </button>
                    </div>
                    <div class="agent-input-form">
                        <label for="mini-bio">{{ "view.agent_create.short_bio" | trans}} <span class="text-danger">*</span></label>
                        <textarea class="required" name="shortBio" data-cy="agent-shortBio" id="mini-bio" rows="4" data-min-length="2" data-max-length="400" data-error-length="{{ "view.agent_create.error_length" | trans }}"></textarea>
                        <span class="text-danger fw-bold d-none">{{ "required_field" | trans }}</span>
                    </div>
                    <div class="agent-input-form">
                        <label for="agent-site">{{ "site" | trans}} <span class="text-danger">*</span></label>
                        <input class="required" type="text" data-cy="agent-site" name="site" id="agent-site"
                               data-min-length="2"
                               data-max-length="100"
                               data-error-length="{{ "view.agent_create.error_length" | trans }}">
                        <span class="text-danger fw-bold d-none">{{ "required_field" | trans }}</span>
                    </div>
                </div>

                <div class="social-media-agent w-100">
                    <div class="agent-expertise">
                        <label for="areas" class="form-label fs-6 fw-bold"> {{ "view.agent_create.inform_your_role_in_culture" | trans}}<span class="text-danger"> *</span></label>
                        <button type="button" class="d-flex align-items-center mb-3">
                            {{ "view.agent_create.add_new" | trans}} <span class="iconify" data-icon="majesticons:plus-line"></span>
                        </button>
                    </div>
                    <div class="d-flex flex-column gap-2 mt-4">
                        <h3 class="fs-5 fw-bold">{{ "view.agent_create.add_social_media" | trans }}</h3>
                        <label class="social-media-input">
                            <span class="iconify fs-2" data-icon="iconoir:instagram"></span>
                            <input type="text" placeholder="nomedeusuario">
                        </label>
                        <label class="social-media-input">
                            <span class="iconify fs-2" data-icon="pajamas:twitter" ></span>
                            <input type="text" placeholder="nomedeusuario">
                        </label>
                        <label class="social-media-input">
                            <span class="iconify fs-2" data-icon="gg:facebook" ></span>
                            <input type="text" placeholder="nomedeusuario">
                        </label>
                        <label class="social-media-input">
                            <span class="iconify fs-2" data-icon="mdi:vimeo" ></span>
                            <input type="text" placeholder="nomedeusuario">
                        </label>
                        <label class="social-media-input">
                            <span class="iconify fs-2" data-icon="mdi:youtube" ></span>
                            <input type="text" placeholder="nomedeusuario">
                        </label>
                        <label class="social-media-input">
                            <span class="iconify fs-2" data-icon="uil:linkedin" ></span>
                            <input type="text" placeholder="nomedeusuario">
                        </label>
                        <label class="social-media-input">
                            <span class="iconify fs-2" data-icon="mdi:spotify" ></span>
                            <input type="text" placeholder="nomedeusuario">
                        </label>
                        <label class="social-media-input">
                            <span class="iconify fs-2" data-icon="jam:pinterest" ></span>
                            <input type="text" placeholder="nomedeusuario">
                        </label>
                    </div>
                </div>
            </div>
        </section>

        <section class="d-flex flex-column-reverse flex-md-row mt-3 mt-md-4 gap-3 gap-md-5">
            <section class="agent-personal-data">
                <h3 class="fw-bold fs-4">{{ "view.agent_create.personal_data" | trans }}</h3>
                <span class="fw-bold small">{{ "view.agent_create.personal_data_warning" | trans }}</span>

                <div class="agent-input-form">
                    <label for="social-name">{{ "view.agent_create.social_name" | trans}}</label>
                    <input name="social_name" id="social-name" type="text" />
                </div>

                <div class="agent-input-form">
                    <label for="full-name">{{ "full_name" | trans}}</label>
                    <input id="full-name" name="full_name" type="text" />
                </div>

                <div class="agent-input-form">
                    <label for="cpf">{{ "cpf" | trans}}</label>
                    <input id="cpf" name="cpf" type="text" />
                </div>

                <div class="agent-input-form">
                    <label for="mei">{{ "mei" | trans}}</label>
                    <input id="mei" name="mei" type="text" />
                </div>

                <div class="agent-input-form">
                    <label for="public-email">{{ "view.agent_create.public_email" | trans}}</label>
                    <input id="public-email" name="public_email" type="text" />
                </div>

                <div class="d-flex flex-column flex-md-row gap-md-4">
                    <div class="agent-input-form">
                        <label for="private-phone1">{{ "view.agent_create.private_phone_1" | trans}}</label>
                        <input id="private-phone1" name="private_phone1" type="text" />
                    </div>

                    <div class="agent-input-form">
                        <label for="private-phone2">{{ "view.agent_create.private_phone_2" | trans}}</label>
                        <input id="private-phone2" name="private_phone2" type="text" />
                    </div>
                </div>

                <div class="agent-address">
                    <h3 class="fw-bold">{{ "address" | trans}}</h3>
                    
                    <div class="row g-1 g-md-3">
                        <div class="col-md-4">
                            <div class="agent-input-form">
                                <label for="cep" class="form-label">{{ "postal_code" | trans}}</label>
                                <input id="cep" name="postal_code" type="text" class="form-control" placeholder="{{ 'type_here' | trans }}" />
                                <div id="cep-error-message" class="text-danger mt-2" style="display:none;"></div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="agent-input-form">
                                <label for="street" class="form-label">{{ "street" | trans}}</label>
                                <input id="street" name="street" type="text" class="form-control" placeholder="{{ 'type_here' | trans }}" />
                            </div>
                        </div>
                    </div>

                    <div class="row g-1 g-md-3 mt-1">
                        <div class="col-md-2">
                            <div class="agent-input-form">
                                <label for="number" class="form-label">{{ "number_address" | trans}}</label>
                                <input id="number" name="number" type="text" class="form-control" placeholder="{{ 'type_here' | trans }}" />
                            </div>
                        </div>
                        <div class="col-md-1 form-check align-items-end d-flex gap-2">
                            <input name="address_no_number" class="form-check-input" type="checkbox" id="no_number" value="1">
                            <label class="form-check-label" for="no_number">
                                {{ 'no_number' | trans }}
                            </label>
                        </div>
                        <div class="col-md-3">
                            <div class="agent-input-form">
                                <label for="neighborhood" class="form-label">{{ "neighborhood" | trans}}</label>
                                <input id="neighborhood" name="neighborhood" type="text" class="form-control" placeholder="{{ 'type_here' | trans }}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="agent-input-form">
                                <label for="address_complement" class="form-label">{{ "view.agent_create.complement_or_reference_point" | trans}}</label>
                                <input id="address_complement" name="complement_or_reference_point" type="text" class="form-control" placeholder="{{ 'type_here' | trans }}" />
                            </div>
                        </div>
                        <div id="number-error-message" class="text-danger mt-2" style="display:none;"></div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="agent-input-form">
                                <label for="state" class="form-label">{{ 'state' | trans }}</label>
                                <select class="form-select" name="address_state" id="state">
                                    <option value="">{{ 'select' | trans }}</option>
                                    {% for state in states %}
                                        <option value="{{ state.id }}">{{ state.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="agent-input-form">
                                <label for="city" class="form-label">{{ 'municipality' | trans}}</label>
                                <select name="address_city" class="form-select" id="city">
                                    <option value="">{{ 'select' | trans }}</option>
                                    {% for city in cities ?? [] %}
                                        <option value="{{ city.id }}">{{ city.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row g-1 g-md-3 mt-3">
                        <div class="col-12">
                            <label class="form-label">{{ 'location' | trans }}</label>
                            <div class="ratio ratio-21x9">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d75897.0345148201!2d-38.627535961048046!3d-3.704056341712097!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x7c749006cf93087%3A0x203684bff0b2f209!2sEd.%20S.%20Pedro%20(marco%20hist%C3%B3rico%20demolido)!5e1!3m2!1spt-BR!2sbr!4v1739989008210!5m2!1spt-BR!2sbr"
                                        allowfullscreen=""
                                        loading="lazy"
                                        referrerpolicy="no-referrer-when-downgrade">
                                </iframe>
                            </div>
                        </div>
                    </div>

                    <div class="agent-public-location mt-3">
                        <div class="d-flex align-items-center">
                            <input id="public-location" name="public_location" type="checkbox" class="form-check-input me-2" />
                            <label class="fw-bold small form-check-label" for="public-location">{{ "view.agent_create.public_location" | trans}}</label>
                        </div>
                        <p class="fw-bold small">{{ "view.agent_create.public_location_info" | trans}}</p>
                    </div>
                </div>
            </section>



            <aside class="agent-administration">
                <div class="agent-expertise">
                    <label for="administered_by" class="form-label fw-bold fs-5">{{ "view.agent_create.administered_by" | trans }}</label>
                    <button type="button" class="d-flex align-items-center mb-3">
                        {{ "view.agent_create.add_new" | trans}} <span class="iconify" data-icon="majesticons:plus-line"></span>
                    </button>
                </div>
                <div>
                    <h4 class="mb-2 fw-bold fs-5">{{ "view.agent_create.related_agents" | trans }}</h4>
                    <span class="fw-bold small">{{ "view.agent_create.add_new_agent_group" | trans }}</span>
                    <button class="agent-add-group mt-2 d-flex justify-content-center align-items-center">
                        <span class="iconify fs-4" data-icon="ic:baseline-plus"></span>
                        <span>{{ "view.agent_create.add_group" | trans }}</span>
                    </button>
                </div>
                <div class="agent-expertise mt-3">
                    <label for="tags" class="form-label fw-bold fs-5">{{ "tags" | trans }}</label>
                    <button type="button" class="d-flex align-items-center mb-3">
                        {{ "view.agent_create.add_new" | trans}} <span class="iconify" data-icon="majesticons:plus-line"></span>
                    </button>
                </div>
            </aside>
        </section>
    </form>
</section>
