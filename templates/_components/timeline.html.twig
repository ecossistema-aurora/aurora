<section class="d-flex">
    {% include "_components/modal-timeline.html.twig" %}

    <div class="management-content w-100">
        <div class="row">
            <div class="col-12">
                <table class="js-grid table table-hover table-striped">
                    <thead class="table-dark">
                    <tr>
                        <th>{{ 'title'|trans }}</th>
                        <th>{{ 'created_at'|trans }}</th>
                        <th>{{ 'device'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                        <tr>
                            <td><a>{{ event.title | trans }}</a></td>
                            <td>{{ event.datetime.format('d/m/Y H:i:s') }}</td>
                            <td>{{ event.device }}</td>
                            <td>
                                {% include '_components/button-modal.html.twig' with {
                                    item: event
                                } %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
