<div class="faq-form-container">
    <h2 class="form-title">{{ 'organization_register' | trans }}</h2>

    <form method="POST" action="">
        <input type="hidden" name="token" value="{{ csrf_token(form_id) }}">
        <div class="mb-3">
            <label for="name" class="form-label">{{ 'name_organization' | trans }}</label>
            <input type="text" class="form-control" id="name" name="name" placeholder={{ 'name_organization' | trans}} required>
        </div>

        <div class="mb-3">
            <label for="type" class="form-label">{{ 'type' | trans }}</label>

            <select name="type" id="type" class="form-select" required>
                <option value="" selected disabled> -- Selecione -- </option>
                {% for type in types %}
                    <option value="{{ type }}">{{ type }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="my-2">
            {% include '_components/tags-selector.html.twig' with {
                inputName: 'activityAreas',
                inputLabel: 'areas_of_expertise'|trans,
                items: activityAreas|map(area => { 'label': area.name, 'value': area.id }),
                tags: [],
                required: false,
                questionFill: true,
            } %}
        </div>

        <div class="mb-3">
            <label for="long_description" class="form-label">{{ 'long_description' | trans }}</label>
            <textarea class="form-control" id="long_description" name="long_description" rows="5" placeholder={{ 'type_here' | trans}} required></textarea>
        </div>

        <div class="mb-3">
            <label for="website" class="form-label">Site</label>
            <input type="url" class="form-control" id="website" name="site" placeholder={{ 'type_here' | trans}}  required>
        </div>

        <div class="mb-3">
            <label for="public_email" class="form-label">E-mail</label>
            <input type="email" class="form-control" id="public_email" name="email" placeholder={{ 'type_here' | trans}}  required>
        </div>

        <div class="mb-3">
            <label for="public_phone" class="form-label">{{ 'public_phone' | trans }}</label>
            <input type="tel" class="form-control" id="public_phone" name="phone" placeholder={{ 'type_here' | trans}}  required>
        </div>

        <div class="btn-form-group">
            <button class="btn btn-primary" type="submit">
                {{ 'save' | trans }}
            </button>
        </div>
    </form>
</div>

{% block extra_javascripts %}
    <script src="{{ asset('js/_components/tags-selector.js') }}"></script>
{% endblock %}
