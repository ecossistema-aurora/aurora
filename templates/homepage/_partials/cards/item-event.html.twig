<div class="item-card-home bg-white p-4 rounded shadow-sm mt-4">
    <div class="row align-items-center">
        <div class="col-md-3">
            <img src="{{ image_url }}" class="rounded-circle img-fluid profile-image">
        </div>
        <div class="col-md-9 position-relative">
            <div class="d-flex align-items-center justify-content-end">
                <i class="material-icons text-success">{{ status_icon}}</i>
                <span>{{ 'events'|trans }}</span>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-1">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-start">
                <h4 class="fw-bold">{{ title }}</h4>
            </div>
        </div>
    </div>
    <div class="row align-items-start mt-1">
        <div class="col-md-12">
            <div class="d-flex align-items-center">
                <i class="material-icons text-success">today</i>
                <span>{{ date }}</span>
            </div>
        </div>
    </div>

    <div class="row align-items-start mt-1">
        <div class="col-md-12">
            <div class="d-flex align-items-center">
                <i class="material-icons text-success">location_on</i>
                <span>{{ location }}</span>
            </div>
        </div>
    </div>

    <h6 class="fw-bold mt-3">{{ 'areas_of_interest'|trans }} ({{ interest_areas_count }}):</h6>
    <span class="text-info fw-bold">{{ interest_areas }}</span>

    <h6 class="fw-bold mt-1">{{ 'tags'|trans }} ({{ tags_count }}):</h6>
    <span class="text-info fw-bold">{{ tags }}</span>

    <div class="row mt-3">
        <div class="col-md position-relative">
            <a href="{{ path('web_event_show', { id: event.id }) }}" class="btn btn-primary d-flex align-items-center justify-content-center">
                <span class="fw-bold">{{ 'check'|trans }}</span>
                <i class="material-icons ms-3">arrow_forward</i>
            </a>
        </div>
    </div>
</div>