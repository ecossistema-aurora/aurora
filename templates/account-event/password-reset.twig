{% extends "_layouts/blank.html.twig" %}

{% block title %} {{ 'account_confirmation'|trans}} {% endblock %}

{% block content %}
    <section class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-md-6 col-lg-5">
                <div class="card card-body mt-3 mb-5">
                    <p class="mb-0">
                        <span class="fs-4 fw-bold">{{ 'view.authentication.password_reset.define_your_new_password'|trans }}</span>
                    </p>

                    <div class="alert alert-danger d-none" id="error-message"></div>

                    <hr>
                    <form action="{{ path('web_account_event_reset', {token: token}) }}" method="post">

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">{{ 'password'|trans }}</label>
                            <input type="password" class="form-control" name="password" placeholder="{{ 'password'|trans }}" required>
                            <small class="form-text text-muted">
                                {{ 'view.authentication.register.password_info_1'|trans }}:
                            </small>
                            <small class="form-text fw-semibold text-danger">
                                {{ 'view.authentication.register.password_info_2'|trans }}.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label for="inputPasswordConfirm" class="form-label">{{ 'confirm_password'|trans }}</label>
                            <input type="password" class="form-control" name="confirm_password" placeholder="{{ 'confirm_password'|trans }}" >
                        </div>

                        <div class="mb-3">
                            <label for="passwordStrength" class="form-label">{{ 'password_strength'|trans }}</label>
                            <div class="progress" id="passwordStrength" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-bar" style="width: 0%" aria-label="Password strength"></div>
                            </div>
                        </div>

                        <button data-cy="submit" class="btn btn-primary w-100">
                            {{ 'login'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block extra_javascripts %}
    <script type="module" src="{{ asset('js/account-event/password-reset.js') }}"></script>
{% endblock %}
