        </div>

        <div class="col-md-3">
            <label for="closes_at" class="form-label">{{ 'closes_at' | trans}}</label>
            <input type="time" class="form-control" id="closes_at" placeholder="00:00">
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <a href="#" class="text-primary fw-bold text-decoration-none">
                <i class="iconify fs-3" data-icon="gridicons:add"></i>
                {{ 'add_opening_hours' | trans }}
            </a>
        </div>
    </div>
</div>
