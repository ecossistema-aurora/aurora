        <div class="col-md-6">
            <label for="week_days" class="form-label">{{ 'week_days' | trans }}</label>
            <select class="form-select" id="week_days">
                <option selected>{{ 'select' | trans }}</option>
            </select>
        </div>

        <div class="col-md-3">
