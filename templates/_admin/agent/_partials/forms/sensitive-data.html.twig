        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="is_traditional_people" name="is_traditional_people" value="1"
                   {% if agent.extraFields['is_traditional_people'] is defined and agent.extraFields['is_traditional_people'] %}checked{% endif %}>
