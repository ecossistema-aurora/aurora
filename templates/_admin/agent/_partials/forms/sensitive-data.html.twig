        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="not_is_traditional_people" name="is_traditional_people" value="0"
                   {% if agent.extraFields is defined and agent.extraFields['is_traditional_people'] is defined and not agent.extraFields['is_traditional_people'] %}checked{% endif %}>
            <label class="form-check-label" for="not_is_traditional_people">{{ 'no'|trans }}</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="traditional_people_public" id="traditional_people_public"
                   {% if agent.extraFields['traditional_people_public'] is defined and agent.extraFields['traditional_people_public'] %}checked{% endif %}>
            <label class="form-check-label" for="traditional_people_public">{{ 'show_public'|trans }}</label>
        </div>
    </div>
</div>
